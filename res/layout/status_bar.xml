<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="@dimen/status_bar_icon"
        android:layout_height="@dimen/status_bar_icon"
        android:background="@drawable/status_bg"
        android:scaleType="center"
        android:src="@drawable/fm_statusbar_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status_bar_button_info_container_padding_left" >

        <TextView
            android:id="@+id/status_bar_track_name"
            style="@style/StatusBarText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/status_bar_artist_name"
            style="@style/StatusBarText"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/status_bar_previous"
        style="@style/StatusBarButton"
        android:src="@drawable/fm_holo_dark_previous" />

    <ImageButton
        android:id="@+id/status_bar_next"
        style="@style/StatusBarButton"
        android:src="@drawable/fm_holo_dark_next" />

    <ImageButton
        android:id="@+id/status_bar_collapse"
        style="@style/StatusBarButton"
        android:src="@drawable/fm_holo_dark_notifiation_bar_collapse" />

</LinearLayout>